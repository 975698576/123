page{
  width: 100%;
  height: 100%;
  background-color: #20B2AA;
}

.box{
  background-color: rgba(255, 255, 255,0.75);
  width: calc(96% - 30px);
  margin:5px auto;
  padding: 10px 15px;
  border-radius: 10px;
  font-size: 16px;
}

.title{
  color: #696969;
  font-weight: bolder;
  font-size: 20px;
  border:2px solid;
  border-bottom-color: #48D1CC;
  border-top-color:rgba(100, 100, 100,0);
  border-left-color:rgba(100, 100, 100,0);
  border-right-color:rgba(100, 100, 100,0);
}
.content{
  font-size: 15px;
  line-height: 25px;
}
image{
  width: 50px;
  height: 50px;
}
.bar{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 5px; 
}

.list-guide{
  display: flex;  
  flex-direction: row; 
  justify-content:space-around;
  border-top: 1px solid #ededed;
  height: 80rpx;
}
.list-guide-imgae{
  height: 70rpx;
  width: 70rpx;
  margin-right: 10px;
  vertical-align: middle;
}
.list-guide-text{
  vertical-align: middle;
  line-height: 90rpx;
  font-size: 35rpx;
}

.guest{
  display: flex;
  flex-direction: row;
  
}

.image{
  border-radius: 50%;
}
.guest-info{
  display: flex;
  flex-direction: column;
  justify-content: center;
}