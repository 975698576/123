/* pages/invitationList/invitationList.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #20B2AA;
}

.list{
  width: 100%;
  height:518px;
  overflow: auto;
}

.item{
  background-color: rgba(255, 255, 255,0.75);
  width: calc(96% - 30px);
  margin:5px auto;
  padding: 10px 15px;
  border-radius: 10px;
  font-size: 16px;
}

.item-title{
  font-size: 25px;
}

.item-content{
  font-size: 20px;
}

.add-btn{
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 50px;
  line-height: 50px;
  font-size: 14px;
  border-radius: 0;
  background-color:rgba(255, 255, 255,0.85);
  color: #48D1CC;
}